doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title product Inventory
  style.
    .main-header{
    width: 100%;
    height: 3.5rem;
    background-color: rgb(218, 167, 40);
    padding: 0 1.5rem;
    }
    body{
    padding: 0;
    margin: 0;
    }
    .main-header-item-list{
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    }
    .main-header-nav{
    height: 100%;
    display: flex;
    align-items: center;
    }
    .main-header-item{
    margin: 0 1rem;
    padding: 0;
    }
    .main-header-item a{
    text-decoration: none;
    color: white;
    }
    .main-header-item a:hover,
    .main-header-item a:active{
    color: rgb(55, 55, 219);
    }
    main{
    padding: 1rem;
    }
    table,tr,th,td{
    border: solid rgb(218, 167, 40);    
    margin: auto;
    width: 50rem;
    max-width: 90%;
    border-collapse: collapse;
    }
    th{
    color: rgb(12, 120, 153);
    background-color: #898c9836;
    }
    .productheader{
    color: rgb(12, 120, 153);
    margin: auto;
    text-align: center;
    max-width: 90%;
    }
header.main-header
  nav.main-header-nav
    ul.main-header-item-list
      li.main-header-item
        a.active(href='/') Home
      li.main-header-item
        a(href='/productlist') Prodcuts
h1.productheader Avilable Prodcuts 
table
  tr
    th ProdcutName
    th Product Quantity
    th Product Status
  each op in products
    tr
      td #{op.ProductName}
      td #{op.prductQuantity}
      td #{op.prodcutstatus}