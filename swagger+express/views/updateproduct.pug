doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title updateproduct
style.
  .main-header{
  width: 100%;
  height: 3.5rem;
  background-color: rgb(218, 167, 40);
  padding: 0 1.5rem;
  }
  body{
  padding: 0;
  margin: 0;
  }
  .main-header-item-list{
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  }
  .main-header-nav{
  height: 100%;
  display: flex;
  align-items: center;
  }
  .main-header-item{
  margin: 0 1rem;
  padding: 0;
  }
  .main-header-item a{
  text-decoration: none;
  color: white;
  }
  .main-header-item a:hover,
  .main-header-item a:active{
  color: rgb(55, 55, 219);
  }
  main{
  padding: 1rem;
  }
  .form-controller label, .form-controller input{
  display: block;
  color: rgb(218, 167, 40);
  }
  .form-controller input{
  border:  1px solid rgb(218, 167, 40);
  font: inherit;
  border-radius: 2px;
  width: 25%;
  }
  button{
  color:  rgb(218, 167, 40);
  border: 1px solid rgb(218, 167, 40);
  border-radius: 3px;
  height: 35px;
  background-color: #ffff;
  }
  .form-controller{
  margin: 1rem 0;
  }
  button:hover, button:active{
  background-color: rgb(218, 167, 40);
  color: #b8babb;
  }
  .product-form{
  width: 50rem;
  max-width: 90%;
  margin: auto;
  }
  .productheader{
  color: rgb(12, 120, 153);
  margin: auto;
  text-align: center;
  max-width: 90%;
  }
header.main-header
  nav.main-header-nav
    ul.main-header-item-list
      li.main-header-item
        a.active(href='/') Home
      li.main-header-item
        a(href='/productlist') Prodcuts
form.product-form(action='/updateproduct' method='post')
  .form-controller
    label(for='id') Id 
    input(type='text' name='id' value=product.id)
  .form-controller
    label(for='prodname') Name
    input(type='text' name='prodname' value=product.Product_Name)
  .form-controller
    label(for='prdoqty') QTY
    input(type='text' name='prdoqty' value=product.Product_Quantity)
  .form-controller
    label(for='prodstatus') Status
    input(type='text' name='prodstatus' value=product.Product_Status)
  button(type='submit')  Update